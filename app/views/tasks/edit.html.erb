<h1>Editar Tarea</h1>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <div>
    <%= form.submit "Guardar cambios" %>
  </div>
<% end %>

<%= link_to 'Volver a la lista de tareas', tasks_path %>
